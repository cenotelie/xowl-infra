grammar RDFT : SPARQL
{
	options
	{
		Axiom = "document";
		Separator = "BLANK";
	}
	terminals { }
	rules
	{
		document        -> prologue rdfrules ;

		rdfrules        -> rule* ;
		rule            -> rule_simple^ | rule_sparql^ ;
		rule_simple     -> 'rule'! rule_mod iri '{'! quads '}'! '=>'! '{'! quads '}'! ;
		rule_sparql     -> 'rule'! rule_mod iri '{'! sub_select '}'! '=>'! '{'! quads '}'! ;
		rule_mod        -> DISTINCT? ;

		triples_template        -> triples_template_neg ('.'! triples_template? )? ;
		triples_template_neg    -> NOT! '('! triples_same_subj ('.'! triples_same_subj)* ')'! ;
		triples_block           -> triples_block_neg ('.'! triples_block? )? ;
		triples_block_neg       -> NOT! '('! triples_same_subj_path ('.'! triples_same_subj)* ')'! ;
	}
}